<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="@dimen/item_vhoder_height" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal">

    <ImageView android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/ivProduct"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/ic_building"/>


    <android.support.constraint.ConstraintLayout
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="3"
            android:orientation="vertical">

        <TextView
                android:layout_marginTop="@dimen/spacing_small"
                android:id="@+id/tvNameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Product"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_title_text_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0"
                />
        <ImageView
                android:id="@+id/imDescription"
                android:layout_width="@dimen/dialog_last_message_avatar_width"
                android:src="@drawable/ic_position"
                app:layout_constraintTop_toBottomOf="@id/tvNameProduct"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tvDescription"
                android:layout_height="@dimen/dialog_last_message_avatar_height" tools:ignore="MissingConstraints"/>
        <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvNameProduct"
                app:layout_constraintLeft_toRightOf="@id/imDescription"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginLeft="@dimen/spacing_tini"
                android:layout_marginTop="@dimen/spacing_tini"
                android:text="Description"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"/>
        <ImageView
                android:id="@+id/imPrice"
                android:layout_width="@dimen/dialog_last_message_avatar_width"
                app:srcCompat="@drawable/ic_euro"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tvPrice"
                android:layout_height="@dimen/dialog_last_message_avatar_height" />


        <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                app:layout_constraintLeft_toRightOf="@+id/imPrice"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="@dimen/spacing_tini"
                android:layout_marginLeft="@dimen/spacing_tini"
                android:textColor="@color/md_red_600"
                android:text="Price"
                android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
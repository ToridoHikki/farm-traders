<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal">
    <android.support.constraint.ConstraintLayout
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_tini"
            android:background="@drawable/border_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

        <ImageView android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/ivProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/border_grey"
                app:layout_constraintRight_toLeftOf="@+id/tvNameProduct"
                android:src="@drawable/ic_building"/>

        <TextView
                android:layout_marginTop="@dimen/spacing_tini"
                android:layout_marginLeft="@dimen/spacing_tini"
                android:id="@+id/tvNameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Product"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_title_text_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ivProduct"
                app:layout_constraintHorizontal_bias="0"/>

        <TextView
                android:id="@+id/imDescription"
                android:layout_width="wrap_content"
                android:text="Mô tả: "
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/spacing_tini"
                android:layout_marginTop="@dimen/spacing_tini"
                app:layout_constraintLeft_toRightOf="@id/ivProduct"
                app:layout_constraintTop_toBottomOf="@id/tvNameProduct"
                app:layout_constraintRight_toLeftOf="@id/tvDescription"
                app:layout_constraintBottom_toTopOf="@id/tvPrice"
                android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvNameProduct"
                app:layout_constraintLeft_toRightOf="@id/imDescription"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toTopOf="@id/tvPrice"
                android:layout_marginLeft="@dimen/spacing_tini"
                android:layout_marginRight="@dimen/spacing_tini"
                android:layout_marginTop="@dimen/spacing_tini"
                android:text="Description"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginLeft="@dimen/spacing_tini"
                android:id="@+id/imPrice"
                android:layout_width="wrap_content"
                android:text="Gía thị trường: "
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                app:layout_constraintLeft_toRightOf="@id/ivProduct"
                app:layout_constraintRight_toLeftOf="@id/tvPrice"
                android:textColor="@color/red"
                android:layout_marginTop="@dimen/spacing_tini"
                android:layout_height="@dimen/dialog_last_message_avatar_height" />


        <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                app:layout_constraintLeft_toRightOf="@+id/imPrice"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="@dimen/spacing_tini"
                android:layout_marginLeft="@dimen/spacing_tini"
                android:textColor="@color/md_red_600"
                android:text="Price"
                android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
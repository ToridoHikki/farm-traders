<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="searchViewStyle">@style/AppSearchViewStyle</item>

        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="AppTextInputLayout" parent="TextInputLayoutAppearance" />
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>
    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="HelperText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppSearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:hint">@string/hint_search</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TEXT_CUSTOM">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TEXT_NORMAL" parent="TEXT_CUSTOM">
        <item name="android:textSize">@dimen/size_title_normal</item>
    </style>

    <style name="TEXT_NORMAL_SUPPER" parent="TEXT_CUSTOM">
        <item name="android:textSize">@dimen/size_title_normal_supper</item>
    </style>

    <style name="TEXT_NORMAL_SUPPER_BLACK" parent="TEXT_NORMAL_SUPPER">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TEXT_NORMAL_SUPPER_WHITE" parent="TEXT_NORMAL_SUPPER">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXT_SMALL" parent="TEXT_CUSTOM">
        <item name="android:textSize">@dimen/size_title_small</item>
    </style>

    <style name="TEXT_LAGER" parent="TEXT_CUSTOM">
        <item name="android:textSize">@dimen/size_title_lager</item>
    </style>

    <style name="TEXT_SUPPER_LAGER" parent="TEXT_CUSTOM">
        <item name="android:textSize">@dimen/size_title_supper_lager</item>
    </style>

    <style name="TEXT_NORMAL_BLACK" parent="TEXT_NORMAL">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TEXT_SMALL_BLACK" parent="TEXT_SMALL">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TEXT_LAGER_BLACK" parent="TEXT_LAGER">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TEXT_SUPPER_LAGER_BLACK" parent="TEXT_SUPPER_LAGER">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TEXT_NORMAL_WHITE" parent="TEXT_NORMAL">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXT_SMALL_WHITE" parent="TEXT_SMALL">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXT_LAGER_WHITE" parent="TEXT_LAGER">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXT_SUPPER_LAGER_WHITE" parent="TEXT_SUPPER_LAGER">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
